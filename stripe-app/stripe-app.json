{
  "id": "com.example.zendesk-connector",
  "version": "0.0.1",
  "name": "Zendesk Connector",
  "icon": "./icon.svg",
  "permissions": [
    {
      "permission": "customer_read",
      "purpose": "View customer details to match with Zendesk contacts"
    },
    {
      "permission": "secret_write",
      "purpose": "Store Zendesk API credentials securely"
    }
  ],
  "app_backend": {
    "webhooks": null
  },
  "ui_extension": {
    "views": [
      {
        "viewport": "stripe.dashboard.customer.detail",
        "component": "CustomerDetailView"
      },
      {
        "viewport": "stripe.dashboard.drawer",
        "component": "AppDrawerView"
      },
      {
        "viewport": "stripe.dashboard.settings.page",
        "component": "SettingsView"
      }
    ],
    "actions": [],
    "content_security_policy": {
      "connect-src": ["https://*.zendesk.com/api/v2/*"],
      "image-src": null
    }
  },
  "post_install_action": {
    "type": "settings"
  }
}
